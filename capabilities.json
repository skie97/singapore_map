{
    "dataRoles": [
        {
            "displayName": "Category Data",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "Latitude",
            "name": "latitude",
            "kind": "Grouping"
        },
        {
            "displayName": "Longitude",
            "name": "longitude",
            "kind": "Grouping"
        }
    ],
    "objects": {
        "map": {
            "displayName": "Map options",
            "properties": {
                "waterColor": {
                    "displayName": "Colour of the Water",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "landColor": {
                    "displayName": "Colour of the Land",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "landStrokeWidth": {
                    "displayName": "Land Outline Width",
                    "type": {
                        "numeric": true
                    }
                },
                "showRunways": {
                    "displayName": "Show Runways",
                    "type": {
                        "bool": true
                    }
                },
                "showAerodromeBoundary": {
                    "displayName": "Show 5km Aerodrome Boundary",
                    "type": {
                        "bool": true
                    }
                },
                "heatmapRadiusInNM":{
                    "displayName": "Heat map radius in nm. 0 is off.",
                    "type": {
                        "numeric": true
                    }
                }
            }
        },
        "dataPoint": {
            "displayName": "Data colors",
            "properties": {
                "fill": {
                    "displayName": "Fill Color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "fillRule": {
                    "displayName": "Color saturation",
                    "type": {
                        "fill": {}
                    }
                },
                "dotSize":{
                    "displayName": "Dot Size",
                    "type": {
                        "numeric": true
                    }
                },
                "fontSize": {
                    "displayName": "Text Size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "table": {
                "rows": {
                    "select": [
                        {
                            "for": {
                                "in": "category"
                            }
                        },
                        {
                            "for": {
                                "in": "latitude"
                            }
                        },
                        {
                            "for": {
                                "in": "longitude"
                            }
                        }
                    ]
                }
            },
            "conditions": [
                {
                    "category":{
                        "max": 1
                    },
                    "latitude":{
                        "max": 1
                    },
                    "longitude":{
                        "max": 1
                    }
                }
            ]
        }
    ]
}